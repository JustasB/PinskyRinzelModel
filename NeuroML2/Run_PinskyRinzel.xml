<Lems>

<!--


    Note: Not yet complete!
    Contact p.gleeson =at= ucl.ac.uk if you are interested in using/contributing to this model.
    
    
    -->

    <!-- Specify which component to run -->
    <Target component="sim1"/>

    <!-- Include core NeuroML2 ComponentType definitions -->
    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>


    <!-- Include core NeuroML2 ComponentType definitions -->
    <Include file="PinskyRinzelCA3CompType.xml"/>

    <pinskyRinzelCA3Cell id="pr1" Ip0="0.75" gLs="0.1" gLd="0.1" gNa="30" gKdr="15"
                     gCa="10" gKahp="0.8" gKC="15" VNa="60" VCa="80" VK="-75" VL="-60"
                     Vsyn="0" gc="2.1" pp="0.5" Cm="3" alphac="2" betac="0.1"/>


    <network id="net1">
        <population id="pr1pop" component="pr1" size="1"/>
    </network>

    <!-- End of NeuroML2 content -->
        

    <Simulation id="sim1" length="1500ms" step="0.05ms" target="net1">

	
        <Display id="Fig2AVs" title="Figure 2A Right Vs" timeScale="1ms" xmin="0" xmax="1500" ymin="-65" ymax="25">
            <Line id="Vs" quantity="pr1pop[0]/Vs" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>
        <Display id="Fig2ACa" title="Figure 2A Left Ca" timeScale="1ms" xmin="0" xmax="1500" ymin="0" ymax="378">
            <Line id="Ca" quantity="pr1pop[0]/Cad" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>
        <Display id="Fig2Aq" title="Figure 2A Left q" timeScale="1ms" xmin="0" xmax="1500" ymin="0" ymax="0.27">
            <Line id="q" quantity="pr1pop[0]/qd" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>

 

	<Display id="Fig3VsVd" title="Figure 3 Vs and Vd" timeScale="1ms" xmin="0" xmax="50" ymin="-10" ymax="90">
            <Line id="Vs" quantity="pr1pop[0]/Vs" scale="1"  color="#00FF00" timeScale="1ms"/>
	    <Line id="Vd" quantity="pr1pop[0]/Vd" scale="1"  color="#FF00FF" timeScale="1ms"/>
        </Display>
	<Display id="Fig3Ca" title="Figure 3 Ca" timeScale="1ms" xmin="0" xmax="50" ymin="0" ymax="800">
            <Line id="Ca" quantity="pr1pop[0]/Cad" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>

    </Simulation>

</Lems>
