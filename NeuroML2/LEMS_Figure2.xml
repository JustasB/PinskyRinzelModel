<Lems>


    <!-- Specify which component to run -->
    <Target component="sim1"/>

    <!-- Include core NeuroML2 ComponentType definitions -->
    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>


    <Include file="PinskyRinzelCA3CompType.xml"/>

    <pinskyRinzelCA3Cell id="pr2A" Ip0="0.75" gnmda="0" gc="2.1" 
			 gLs="0.1" gLd="0.1" gNa="30" gKdr="15"
                         gCa="10" gKahp="0.8" gKC="15" VNa="60" VCa="80" VK="-75" VL="-60"
                         pp="0.5" Cm="3" alphac="2" betac="0.1"
			 Id="0" gampa="0" />

    <pinskyRinzelCA3Cell id="pr2C" Ip0="2.5" gnmda="0" gc="2.1"
			 gLs="0.1" gLd="0.1" gNa="30" gKdr="15"
                         gCa="10" gKahp="0.8" gKC="15" VNa="60" VCa="80" VK="-75" VL="-60"
                         pp="0.5" Cm="3" alphac="2" betac="0.1"
			 Id="0" gampa="0" />

    <pinskyRinzelCA3Cell id="pr2D" Ip0="2.5" gnmda="0" gc="10.5" 
			 gLs="0.1" gLd="0.1" gNa="30" gKdr="15"
                         gCa="10" gKahp="0.8" gKC="15" VNa="60" VCa="80" VK="-75" VL="-60"
                         pp="0.5" Cm="3" alphac="2" betac="0.1"
			 Id="0" gampa="0" />


    <network id="net1">
        <population id="pr1pop" component="pr2A" size="1"/>
	<population id="pr2pop" component="pr2C" size="1"/>
	<population id="pr3pop" component="pr2D" size="1"/>
    </network>


    <Simulation id="sim1" length="1500ms" step="0.01ms" target="net1">
	
        <Display id="Fig2AVs"  title="Figure 2A somatic input, left: Vs" timeScale="1ms"        xmin="-100" xmax="1600" ymin="-70" ymax="40">
            <Line id="Vs" quantity="pr1pop[0]/Vs" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>
        
        <Display id="Fig2ACaq" title="Figure 2A somatic input, right: Ca, q" timeScale="1ms"    xmin="-100" xmax="1600" ymin="-0.05" ymax=".6">
            <Line id="Ca" quantity="pr1pop[0]/Cad" scale="666.7"  color="#000000" timeScale="1ms"/>
            <Line id="q"  quantity="pr1pop[0]/qd" scale="1"  color="#FF0000" timeScale="1ms"/>
        </Display>

 	<Display id="Fig2CVs"  title="Figure 2C strong somatic input, left: Vs" timeScale="1ms" xmin="-100" xmax="1600" ymin="-70" ymax="40">
            <Line id="Vs" quantity="pr2pop[0]/Vs" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>
        
        <Display id="Fig2CCaq" title="Figure 2C somatic input, right: Ca, q" timeScale="1ms"    xmin="-100" xmax="1600" ymin="-0.05" ymax=".6">
            <Line id="Ca" quantity="pr2pop[0]/Cad" scale="666.7"  color="#000000" timeScale="1ms"/>
            <Line id="q"  quantity="pr2pop[0]/qd" scale="1"  color="#FF0000" timeScale="1ms"/>
        </Display>

 	<Display id="Fig2DVs"  title="Figure 2D strong somatic input, tight coupling, left: Vs" timeScale="1ms" xmin="-100" xmax="1600" ymin="-70" ymax="40">
            <Line id="Vs" quantity="pr3pop[0]/Vs" scale="1"  color="#000000" timeScale="1ms"/>
        </Display>
        
        <Display id="Fig2DCaq" title="Figure 2D somatic input, tight coupling, right: Ca, q" timeScale="1ms"    xmin="-100" xmax="1600" ymin="-0.05" ymax=".6">
            <Line id="Ca" quantity="pr3pop[0]/Cad" scale="666.7"  color="#000000" timeScale="1ms"/>
            <Line id="q"  quantity="pr3pop[0]/qd" scale="1"  color="#FF0000" timeScale="1ms"/>
        </Display>

    </Simulation>

</Lems>
